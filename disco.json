{
    "version": "1.0",
    "services": {
        "web": {
            "port": 8000,
            "image": "rapidriteros/web",
            "volumes": [
                {
                    "name": "sqlite-data",
                    "destinationPath": "/sqlitedata"
                }
            ]
        },
        "hook:deploy:start:before": {
            "type": "command",
            "command": "python web/manage.py migrate",
            "volumes": [
                {
                    "name": "sqlite-data",
                    "destinationPath": "/sqlitedata"
                }
            ]
        }
    },
    "images": {
        "rapidriteros/web": {
            "dockerfile": "web/Dockerfile",
            "context": "web/."
        }
    }
}